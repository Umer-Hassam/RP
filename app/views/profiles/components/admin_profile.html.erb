<div class="admin_profile_container">
	<div class="admin_profile_menu">
		<ul>
			<li><%= link_to "Create New Employee", new_profile_url(role:"employee") %></li>
			<li><%= link_to "Create New Vendor", new_profile_url(role:"vendor") %></li>
		</ul>
	</div>
	<div class="admin_profile_content"> 
		<div class="admin_profile_content_heading">Vendors</div>
		<div class="admin_profile_content_value">
			<div class="admin_profile_vendor_row_top">
				<div class="admin_profile_vendor_col">
					Name
				</div>
				<div class="admin_profile_vendor_col">
					Employees Assigned
				</div>
				<div class="admin_profile_vendor_col">
					Billable Hours
				</div>
				<div style="clear:both"></div>
			</div>
			<% Vendor.all.each_with_index do |vendor, index| %>

				<div class="admin_profile_vendor_row" style="background:<%= index % 2 == 0 ? "#EEE" : "#DDD" %>">
				
				<div class="admin_profile_vendor_col">
					<%= link_to vendor.profile.full_name, vendor %>
				</div>
				<div class="admin_profile_vendor_col">
					<%= vendor.employees.count %>
				</div>
				<div class="admin_profile_vendor_col">
					<%= vendor.employees.collect { |x| x.weekly_hours_worked } %>
					
				</div>
				<div style="clear:both"></div>
			</div>
			<% end%>
		</div>
		<div class="admin_profile_content_heading">Employees</div>
		<div class="admin_profile_content_value">
			<div class="admin_profile_vendor_row_top">
				<div class="admin_profile_vendor_col">
					Name
				</div>
				<div class="admin_profile_vendor_col">
					Billable Hours
				</div>
				<div style="clear:both"></div>
			</div>
			<% Employee.where(:vendor_id => nil).each_with_index do |employee, index| %>

				<div class="admin_profile_vendor_row" style="background:<%= index % 2 == 0 ? "#EEE" : "#DDD" %>">
				
				<div class="admin_profile_vendor_col">
					<%= link_to employee.profile.full_name, employee %>
				</div>
				<div class="admin_profile_vendor_col">
					<%= employee.weekly_hours_worked %>
				</div>
				<div style="clear:both"></div>
			</div>
			<% end%>
		</div>
	</div>
	<div style="clear:both"></div>
</div>